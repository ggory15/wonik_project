<?xml version="1.0"?>

<launch>

  <arg name="env_map" default="$(find wonik_real)/maps/mymap.yaml" />

  <!-- MAP SERVER -->
  <node name="map_server" pkg="map_server" type="map_server" args="$(arg env_map)">
  </node>
  
  <!-- Topic Relays -->
  
  <node pkg="topic_tools" type="relay" ns="/lidar_1" name="relay" args="/lidar_1/scan /scan" />
  <node pkg="topic_tools" type="relay" ns="/lidar_2" name="relay" args="/lidar_2/scan /scan" />

  <!-- Localization Node -->
  <node pkg="wonik_localization" type="wonik_localization_node" name="wonik_localization_node" output="screen">

    <rosparam file="$(find wonik_real)/configs/navigation/wonik_localization/wonik_localization.yaml" command="load" />
  </node>

</launch>
