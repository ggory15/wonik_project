<?xml version="1.0"?>
<launch>

 <node pkg="move_base" type="move_base" respawn="false" name="move_base2" output="screen">

    <!-- Costmaps -->
    <rosparam file="$(find wonik_simulation)/config/move_base/costmaps/costmap_common2.yaml" command="load" ns="global_costmap" />
    <rosparam file="$(find wonik_simulation)/config/move_base/costmaps/costmap_common2.yaml" command="load" ns="local_costmap" />
    <rosparam file="$(find wonik_simulation)/config/move_base/costmaps/costmap_local.yaml" command="load" />
    <rosparam file="$(find wonik_simulation)/config/move_base/costmaps/costmap_global.yaml" command="load" />

    <!-- NavFn -->
    <param name="base_global_planner" value="navfn/NavfnROS"/>
    <rosparam file="$(find wonik_simulation)/config/move_base/global_planner/NavFnROS/navfnros_planner.yaml" command="load" />

    <!-- WonikLocalPlanner -->
    <param name="base_local_planner" value="wonik_local_planner/WonikLocalPlanner"/>
    <rosparam file="$(find wonik_simulation)/config/move_base/local_planner/wonik_local_planner/wonik_planner.yaml" command="load" />
    
    <!-- Common -->
    <rosparam file="$(find wonik_simulation)/config/move_base/move_base/move_base.yaml" command="load" />
    
    <remap from="cmd_vel"    to="cmd_vel_nav2" />
  </node>

</launch>
